.goods
    display :flex
    position :absolute
    left :0
    top: 171px
    bottom : 46px
    width :100%
    overflow :hidden
    .menu-wrapper
        width :80px
        flex: 0 0 80px
        background :#f3f5f7
        .menu-item
            display :table
            height:54px
            width :56px
            padding :0 12px
            &.current
                background :#fff
                position: relative
                margin-top: -1px
                .text
                    font-weight :700
                    &:after
                        display: none
            .cover-icon
                width :12px;
                height:12px
                margin-right:2px
            .text
                border-1px(rgba(7,17,27,0.1))
                display :table-cell
                font-size 12px
                width 56px
                vertical-align middle
    .foods-wrapper
        flex:1
        .title
            padding-left :14px
            height :26px
            line-height: 26px
            border-left:2px solid #d9dde1
            font-size: 12px
            color: rgb(147,153,159)
            background :#F4F5F7
        .food-item
            border-1px(rgba(7,17,27,0.1))
            display: flex
            margin :18px
            margin-bottom:0
            padding-bottom :18px
            box-sizing :border-box
            &:last-child:after
                display:none
            .icon
                width :57px
                height :57px
                margin-right:9px
                img
                    display: block
                    width :100%
                    height 100%
            .content
                flex:1
                .name
                    font-size :14px
                    margin:2px 0 8px 0
                    line-height:14px
                    height:14px
                    color :rgb(7,17,27)
                    font-weight :bold
                .desc
                    margin-bottom:8px
                    color :#8C939B
                    font-size: 9px
                    line-height:12px
                .extra
                    font-size:0
                    color: #8C939B
                    margin-bottom:8px
                    span
                        font-size: 9px
                    .count
                        margin-right: 11px
                .price
                    font-weight :700
                    line-height :24px
                    font-size:0
                    .now
                        margin-right: 8px
                        font-size: 14px
                        color: rgb(240,20,20)
                    .old
                        text-decoration :line-through
                        font-size: 10px
                        color: rgb(147,153,159)
            .cartcontrol-wrapper
                position: absolute
                right: 0
                bottom: 12px
