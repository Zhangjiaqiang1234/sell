//实现1px 下边框
border-1px($color=blue)
    position relative
    &:after
        display: block
        position: absolute
        left: 0
        bottom: 0
        width: 100%
        border-top: 1px solid $color
        content: ''

bg-image($url)
    background-image: url($url+'@2x.png')
    @media (-webkit-min-divice-pixel-ratio: 3),(min-divice-pixel-ratio: 3)
        background-image: url($url+'@3x.png')
